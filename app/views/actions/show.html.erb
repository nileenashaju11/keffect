<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item"><h1 class="title"><%= @action.name %></h1></div>
  </div>
  <!-- Right side -->
  <div class="level-right">
    <div class="level-item"><%= link_to 'Edit Action', edit_action_path(@action), class: 'button is-text is-rounded has-text-weight-semibold' %></div>
  </div>
</nav>

<p class="content"><%= @action.content %></p>

<% if @action.respond_to?(:audio_file) && @action.audio_file.present? %>
  <audio controls>
    <source src="<%= polymorphic_url(@action.audio_file) %>">
    Your browser does not support the audio element.
  </audio>
<% end %>
