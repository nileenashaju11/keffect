<div class="card">
  <div class="card-content">
    <div class="content">
      <%= form_for @setting do |f| %>
        <div class="field">
          <%= f.check_box :value, class: 'switch is-success', checked: ActiveModel::Type::Boolean.new.cast(@setting.value) %>
          <%= f.label :value, 'Enabled', class: 'label' %>
          <p class="help">When this is on any new Leads that are created or
          if their Zendesk stage changes they will be automatically started into
          a new Flow.</p>
        </div>
        <div class="field is-grouped">
          <div class="control">
            <%= f.submit 'Save', class: 'button is-link' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
