<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item"><h1 class="title">Users</h1></div>
  </div>
  <!-- Right side -->
  <div class="level-right">
    <div class="level-item"><%= link_to '+ New User', new_user_path, class: 'button is-link is-rounded has-text-weight-semibold' %></div>
  </div>
</nav>

<div class="table-container">
  <table class="table is-hoverable is-striped is-fullwidth">
    <thead>
      <tr>
        <th>Email</th>
        <th width=7%></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><strong><%= link_to user.email, edit_user_path(user) %></strong></td>
          <td class="has-text-right"><%= link_to 'Edit', edit_user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
